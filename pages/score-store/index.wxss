page{
  width: 100%;
  height: 100%;
}
.container{
    background-color: #fff;
    display: block;
}
.store-money{
  background-color:#fff;
  background:url(https://cdn.it120.cc/apifactory/2018/03/26/f06f5c1bcf7cdb662a92e2f39d0d087b.png)no-repeat center;
  background-size:100% 237px;
  height:115px;
  width:100%;
  border-top:1px solid #f5f5f5;
  border-bottom: 20px solid #f5f5f5;
}
.money-pro{
  padding-top:15px;
  padding-left:20px;
}
.money-title{
  font-size:26rpx;
  padding-bottom:15px;
  font-weight:600;
  color:#333;
}
.money-number{
  color:#ee5a52;
  font-size:70rpx;
  font-weight:200;
}
.money-number text{
  font-size: 35rpx;
  padding-left: 5px;
}
.money-info{
  font-size:24rpx;
  float:right;
  margin-top:-25px;
  margin-right:15px;
  color:#999;
  border:1px solid #eee;
  padding:2px 5px;
  border-radius:6rpx;
}
.swiper-tab{  
  width: 100%;  
  border-bottom: 1px solid #f5f5f5;  
  text-align: center;  
  line-height: 90rpx;
}  
.swiper-tab-list{  font-size: 30rpx;  
  display: inline-block;  
  width: 25%;  
  color: #999;  
}  
.on{ 
  color: #ee5a52;  
  border-bottom: 5rpx solid #ee5a52;
}  
.swiper-box{ 
  display: block; 
  height: 69%; 
  width: 100%; 
  overflow: hidden; 
} 
swiper-item{
  overflow:scroll;
}
.store-product{
  width:100%;
  margin-top:15px;
}
.product-list{
  width:90%;
  margin:0 auto;
  border:1px solid #f5f5f5;
  margin-bottom:20px;
  height: 105px;
  position: relative;
  border-radius:6rpx;
  box-shadow:0px 8px 8px -12px #999;
}
.product-list image{
  width: 105px;
  height: 105px;
  float: left;
  border-bottom-left-radius:6rpx;
  border-top-left-radius:6rpx;
}
.product-info{
  display:inline-block;
  padding-left:15px;
  font-size:28rpx;
}
.info-name{
  padding-top:5px;
  font-size:32rpx;
  color:#666;
  padding-bottom:5px;
  font-weight:300;
}
.info-score{
  display:inline-block;
  font-size:30rpx;
  color:#ee5a52;
}
.info-score text{
  font-size:24rpx;
  padding-left:2px;
}
.info-money{
  display:inline-block;
  font-size:24rpx;
  padding-left:5px;
  color:#999;
  text-decoration:line-through;
}
.info-stock{
  font-size:22rpx;
  color:#999;
  padding-top:5px;
}
.info-btn{
  position:absolute;
  right:10px;
  bottom:10px;
  background-color:#afafaf;
  color:#fff;
  padding:4px 8px;
  font-weight:300;
  border-radius:6rpx;
  font-size:26rpx;
}
.info-btn .active{
  background-color:#ee5a52;
}
.score-coupons{
  width:100%;
  background-color:#fff;
}
.coupons-box,.coupons-list{
  width: 100%;
  position: relative;
}
.coupons-box{
  padding-top: 20px;
}
.coupons-list image{
  width:90%;
  height:120px;
  margin:0 auto;
  display:block;
}
.coupons-info{
  position:absolute;
  z-index:9999;
  top:9px;
  left:25%;
  font-size:28rpx;
  width: 65%;
}
.coupons-list{
  margin-bottom: 15px;
}
.coupons-name{
  font-size:40rpx;
  font-weight:bold;
  color:#ee5a52;
  padding-top:5px;
}
.coupons-type{
  font-size:36rpx;
  padding-top:5px;
  color:#ee5a52;
}
.coupons-day{
  padding-top:8px;
  color:#999;
  font-size:26rpx;
}
.coupons-btn{
  position:absolute;
  right:0;
  bottom:30%;
  background-color:#afafaf;
  color:#fff;
  border-radius:6rpx;
  font-size:26rpx;
  width:70px;
  text-align:center;
  height:28px;
  line-height:28px;
  font-weight:300;
}
.active{
  background-color: #ee5a52;
}
.score-store{
  position:absolute;
  background-color:#ee5a52;
  right:0;
  top:110px;
  font-size:26rpx;
  color:#fff;
  padding:3px 8px 3px 6px;
  border-bottom-left-radius:10rpx;
  border-top-left-radius:10rpx;
  font-weight:300;
}
.show-notice{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  background-color:rgba(0,0,0,.4);
}
.show-box{
  width:300px;
  margin:0 auto;
  background-color:#fff;
  margin-top:22%;
  height:300px;
  border-radius:6rpx;
  padding-bottom: 55px;
  position: relative;
}
.show-box .close{
  width:22px;
  height:22px;
  position:absolute;
  right:5px;
  top:5px;
}
.show-protuct-box{
  width:85%;
  margin:0 auto;
  height:85px;
  margin-bottom:15px;
  padding-top:25px;
}
.show-protuct-box image{
  width:85px;
  height:85px;
  border-radius:6rpx;
  float:left;
}
.show-product-name{
  display:block;
  font-size:30rpx;
  padding-left:10px;
  color:#333;
  width:60%;
  float:left;
  padding-top: 5px;
}
.show-product-money{
  display:block;
  font-size:28rpx;
  padding-left:10px;
  float:left;
  padding-top:4px;
  color:#ee5a52;
  width: 60%;
}
.show-product-stock{
  float:left;
  width:60%;
  padding-left:10px;
  font-size:22rpx;
  color:#999;
  padding-top:4px;
}
.show-notice-text{
  width:85%;
  margin:0 auto;
}
.show-notice-text input{
  border:1px solid #f5f5f5;
  margin-bottom:15px;
  font-size:28rpx;
  border-radius:4rpx;
  height:35px;
  padding:0px 0px 0px 10px;
  color:#333;
  font-weight:300;
}
.show-btn{
  text-align:center;
  background-color:#ee5a52;
  color:#fff;
  height:35px;
  line-height:35px;
  font-size:30rpx;
  font-weight:300;
  border-radius:4rpx;
}
.show-text-info{
  font-size:22rpx;
  text-align:center;
  padding-top:10px;
  color:#999;
}