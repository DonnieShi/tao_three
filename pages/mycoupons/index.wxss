/**index.wxss**/
page{
  background-color: #ffffff;
}
.coupons{
  margin-top:10rpx;
  width: 95%;
}
.coupons-scroll{
  width: 100%;
  margin-top:10px;
}
.coupons-item{
  width:98%;
  height: 130px;
  background-image: url(https://cdn.it120.cc/apifactory/2018/03/29/df445ec0e08d47a14790374eb1950646.png);
  background-repeat:no-repeat;
  background-size:100% 130px;
  padding-top: 20rpx;
  padding-left: 15rpx;
  box-sizing: content-box;
  font-size: 20rpx;
  line-height: 35rpx;
  overflow: hidden;
  color: #ee5a52;
  display: inline-block;
  border-radius: 10rpx;
}
.coupon-money{
  font-size:60rpx;
  margin:10px 0;
  position:absolute;
  left:23%;
  font-weight:400;
}
.coupon-money text{
  font-size:24rpx;
  padding-left:5px;
  font-weight: 300;
}
.coupon-name{
  font-size:38rpx;
  margin:50px 0;
  position:absolute;
  left:23%;
  color: #666;
  font-weight:300;
}
.coupon-ico{
  position:absolute;
  width:70px;
  height:70px;
  right:4px;
  margin:-7px 0;
}
.coupon-hold{
  margin:85px 0;
  color:#999;
  font-size:24rpx;
  position:absolute;
  left:23%;
}
.coupon-date{
  margin:85px 0;
  color:#999;
  font-size:24rpx;
  position:absolute;
  left:50%;
}
.fav-img-btn{
  width:30px;
  height:30px;
  margin:0px 15px -6px 25px;
}
.new-coupons{
  width:100%;
  height:60px;
  background:url(https://cdn.it120.cc/apifactory/2018/03/26/f06f5c1bcf7cdb662a92e2f39d0d087b.png)no-repeat center;
  background-size:100% 240px;
  border-bottom:1px solid #f5f5f5;
  border-top:1px solid #f5f5f5;
  padding-top:25px;
  padding-bottom: 10px;
}
.coupons-input{
  width:100%;
  height:60px;
}
.input{
  border:1px solid #eee;
  border-radius:3px;
  padding:5px 5px;
  margin-bottom:10px;
  font-size:30rpx;
  width:75%;
  display:inline-block;
  margin-left:20px;
  font-weight:300;
  background-color: #fff
}
.primary {
  font-size:32rpx;
  color:#ee5a52;
  display:inline-block;
  float:right;
  height:33px;
  line-height:40px;
  font-weight:300;
  margin-right:5px;
  width:50px;
}
.no-more-goods{
  width:100%;
  text-align:center;
  margin-top:30%;
}
.no-more-goods .no-order-img{
  width:100px;
  height:78px;
  padding-bottom:5px;
}
.no-more-goods .text{
  font-size:28rpx;
  color:#999;
}