.score-header{
  width:100%;
  height:270px;
  position:relative;
  background:url(https://cdn.it120.cc/apifactory/2018/03/26/f06f5c1bcf7cdb662a92e2f39d0d087b.png)no-repeat center;
  background-size:100% 270px;
  border-top:1px solid #f5f5f5;
}
.score-number{
  width:100%;
  text-align:center;
  padding-top:20px;
  font-size:80rpx;
  color:#333;
}
.score-info{
  width:100%;
  text-align:center;
  font-size:24rpx;
  color:#666;
}
.score-times{
  width: 100%;
  height: 70px;
  bottom: 0;
  position: absolute;
  text-align: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
  background-color: rgba(0, 0, 0, 0.1);
}
.times-list{
  width: 14%;
  display: inline-block;
}
.times-score{
  padding-top: 5px;
}
.times-line{
  padding-top: 7px;
  border-bottom:1px solid rgba(0, 0, 0, 0.5);
}
.times-pus{
  width:9px;
  height:9px;
  background-color: #737373;
  display:block;
  position:absolute;
  margin-left:25px;
  border-radius:50%;
  margin-top:3px;
}
.times-day{
  padding-top: 7px;
}
.item-on{
  color:#ee5a52;
}
.item-on .times-line{
  border-bottom: 1px solid #ee5a52;
}
.item-on .times-pus{
  background-color: #ee5a52;
}
.score-yao{
  width:40px;
  height:40px;
  margin:0 auto;
  display:block;
  padding-top:35px;
  animation: shake-hard 3s ease-in-out infinite;
}
.score-btn{
  width:100%;
  font-size:24rpx;
  color:#999;
  text-align:center;
  padding-top:40px;
}
.score-coupons{
  width:100%;
  background-color:#fff;
}
.coupons-box,.coupons-list{
  width: 100%;
  position: relative;
}
.coupons-box{
  padding-top: 20px;
}
.coupons-list image{
  width:90%;
  height:120px;
  margin:0 auto;
  display:block;
}
.coupons-info{
  position:absolute;
  z-index:9999;
  top:9px;
  left:25%;
  font-size:28rpx;
  width: 65%;
}
.coupons-list{
  margin-bottom: 15px;
}
.coupons-name{
  font-size:40rpx;
  font-weight:bold;
  color:#ee5a52;
  padding-top:5px;
}
.coupons-type{
  font-size:36rpx;
  padding-top:5px;
  color:#ee5a52;
}
.coupons-day{
  padding-top:8px;
  color:#999;
  font-size:26rpx;
}
.coupons-btn{
  position:absolute;
  right:0;
  bottom:30%;
  background-color:#afafaf;
  color:#fff;
  border-radius:6rpx;
  font-size:26rpx;
  width:60px;
  text-align:center;
  height:28px;
  line-height:28px;
}
.active{
  background-color: #ee5a52;
}
.score-store{
  position:absolute;
  right:0;
  top:0;
}
.score-store image{
  width:80px;
  height:80px;
}

