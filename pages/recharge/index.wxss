page{
    height: 100%;
}
.container{
    background-color: #fff;
    display: block;
}
.recharge-money{
  background-color:#fff;
  background:url(https://cdn.it120.cc/apifactory/2018/03/26/f06f5c1bcf7cdb662a92e2f39d0d087b.png)no-repeat center;
  background-size:100% 237px;
  height:115px;
  width:100%;
  border-top:1px solid #f5f5f5;
}
.money-pro{
  padding-top:15px;
  padding-left:20px;
}
.money-title{
  font-size:26rpx;
  padding-bottom:15px;
  font-weight:600;
  color:#333;
}
.money-number{
  color:#ee5a52;
  font-size:70rpx;
  font-weight:200;
}
.money-number text{
  font-size: 35rpx;
  padding-left: 5px;
}
.money-info{
  font-size:24rpx;
  float:right;
  margin-top:-25px;
  padding-right:15px;
  color:#999;
}
.recharge-box{
  background-color:#fff;
  border-top:20px solid #f5f5f5;
}
.box-banner{
  padding-top:20px;
  padding-bottom:20px;
}
.banner-list{
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  width: 33.33%;
}
.banner-list image{
  width:50px;
  height:50px;
}
.banner-name{
  color: #666;
  padding-top: 6px;
}
.banner-text{
  font-size:22rpx;
  color:#999;
  padding-top:5px;
}
.box-money-list{
  width: 100%;
}
.radio-group label{
  display:inline-block;
  width:47%;
  height: 100px;
  margin:5px;
  border-radius: 6rpx;
  position: relative;
  box-shadow:0px 8px 8px -10px #999;
}
.box-money-list .radio-group{
  margin-left:6px;
}
.box-money-list .radio-group label:nth-child(1){
  background-color: #ffe1e1;
}
.box-money-list .radio-group label:nth-child(2){
  background-color: #d0ddee;
}
.box-money-list .radio-group label:nth-child(3){
  background-color: #fbe4c4;
}
.box-money-list .radio-group label:nth-child(4){
  background-color: #ffd571;
}
.list-group radio{
  float: right;
}
.money-list-group{
  width:22px;
  height:22px;
  position:absolute;
  right:8px;
  top:8px;
}
.active{
  background:url(https://cdn.it120.cc/apifactory/2018/03/28/9c58a80c1ecfa5628783cac2584c7288.png);
  background-size:22px auto;
}
.money-list-number{
  font-size:36rpx;
  font-weight:600;
  color:#333;
  padding-top:45px;
  padding-left:10px;
}
.money-list-number text{
  font-size:26rpx;
  font-weight:200;
}
.money-list-info{
  font-size:24rpx;
  color:#999;
  padding-left:10px;
}
.money-list-info text{
  color:#ee5a52;
  font-weight:600;
}
.recharge-fooder{
  position: fixed;
  bottom: 0;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  height: 50px;
  width: 100%;
}
.fooder-info{
  display:inline-block;
  font-size:30rpx;
  line-height:50px;
  padding-left:15px;
  color:#333;
}
.fooder-info text{
  color: #ee5a52;
}
.fooder-btn{
  font-size:28rpx;
  background-color:#ee5a52;
  float:right;
  padding:4px 15px;
  margin-top:10px;
  margin-right:15px;
  color:#fff;
  border-radius:6rpx;
}
