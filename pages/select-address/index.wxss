page {
    background-color:#fff;
}
.address-list{
    width: 100%;
}
.address-list .a-address{
    width: 720rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
    background-color: #fff;
}
.a-address .left-text{
    width: 610rpx;
    box-sizing: border-box;
    padding-left: 70rpx;
}
.a-address .left-text.active{
    background: url(https://cdn.it120.cc/apifactory/2018/03/29/b3d5721417c12e9ca9fd87868c162605.png) no-repeat left center;
    background-size: 40rpx auto;
}
.a-address .left-text .name-tel{
    margin-bottom:10rpx;
    font-size:32rpx;
    color:#333;
    font-weight: 300;
}
.a-address .left-text .address-box{
    font-size:26rpx;
    color:#999;
    line-height:36rpx;
    font-weight: 300;
}
.a-address .right-edit{
    width: 109rpx;
    height: 100%;
    padding: 50rpx 0 50rpx 58rpx;
    box-sizing: border-box;
    background: url(https://cdn.it120.cc/apifactory/2018/03/29/1480c8cb49f117d0a364d1a3e7340e1b.png) no-repeat 43rpx center;
    background-size: 35rpx auto;
}
.bottom-box{
  position:fixed;
  bottom:0;
  background-color:#ffffff;
  width:100%;
  text-align:center;
  height:48px;
  font-size:30rpx;
  line-height:48px;
  color: #ee5952;
  border-top: 1px solid #f5f5f5;
}
.bottom-box image{
  width:15px;
  height:15px;
  margin: -2px 0;
}
.no-more-goods{
  text-align:center;
  margin-top:30%;
}
.no-order-img{
  width:100px;
  height:84px;
  padding-bottom:10px;
}
.no-more-goods .text{
  font-size:28rpx;
  color:#999;
  margin-top: -5px;
}