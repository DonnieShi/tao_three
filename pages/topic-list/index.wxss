page{
  height: 100%;
  background-color: #f5f5f5;
}
.container{
  width: 100%;
  height: 100%;
  display: block;
}
.topic-names{
  width:100%;
  height:260rpx;
  background-color:#f5f5f5;
  margin-top:-14rpx;
  overflow-x:scroll;
  white-space:nowrap;
}
.topic-names-list{
  text-align:center;
  display:inline-block;
  padding-left:20rpx;
  padding-top:40rpx;
  padding-bottom: 30rpx;
  position: relative;
}
.list-images{
  width:200rpx;
  height:200rpx;
  border-radius: 6rpx;
}
.list-bg{
  position:absolute;
  top:40rpx;
  width:200rpx;
  background-color:#000;
  height:200rpx;
  opacity:.3;
  border-radius: 6rpx;
}
.list-name{
  font-size:26rpx;
  color:#fff;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  position:absolute;
  top:40rpx;
  width:200rpx;
  text-align:center;
  line-height:200rpx;
}
.topic-contents{
  width:100%;
  height:100%;
  padding-top:30rpx;
  background-color:#fff;
}
.topic-content-list{
  background-color:#fff;
  position:relative;
  width:90%;
  margin:0 auto;
  margin-bottom:40rpx;
}
.content-images{
  width:100%;
  height:400rpx;
  display:block;
  margin:0 auto;
  border-radius:10rpx;
}
.content-bg{
  width:100%;
  height:400rpx;
  position:absolute;
  top:0;
  background-color:#000;
  opacity:.3;
  border-radius:10rpx;
}
.content-text{
  position:absolute;
  top:25%;
  width:100%;
  text-align:center;
  color:#fff;
}
.content-title{
  font-size:40rpx;
  padding-bottom:20rpx; 
}
.content-subtitle{
  font-size:26rpx;
  padding-bottom:40rpx;
  font-weight:300;
}
.content-button{
  border:1px solid #fff;
  width:160rpx;
  font-size:24rpx;
  margin-left:40%;
  border-radius:40rpx;
  padding:8rpx 0;
  font-weight:300;
}
.no-more-goods{
  text-align:center;
  margin-top:20%;
  width:100%;
  height:100%;
}
.no-order-img{
  width:140rpx;
  height:180rpx;
  padding-bottom:20rpx;
}
.no-more-goods .text{
  font-size:28rpx;
  color:#999;
  margin-top: -10rpx;
}
