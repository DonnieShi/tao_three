page{
  background-color: #ffffff;
}
.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}
.userinfo {
	padding: 50rpx 0;
	background: #fff;
  width: 750rpx;
}
.userinfo-avatar {
	width:130rpx;
  height:130rpx;
  margin-right:20px;
  border-radius:50%;
  float:right;
  overflow:hidden;
}
.userinfo-nickname {
  margin-top:15rpx;
  color:#333;
  font-size:40rpx;
  float:left;
  margin-left:20px;
  font-weight:600;
  width: 60%;
}
.userinfo button{
  background-color: #ffffff;
  margin-left:5px;
  float:left;
  font-size:30rpx;
  color:#999;
}
.userinfo button::after{
  border: 0;
}
.relogin{
  float:left;
  margin-left:20px;
  font-size:30rpx;
  color:#999;
  padding-top:5px;
}
.userinfo-money{
  background-color:#fff;
  width:100%;
  text-align:center;
  border-bottom:1px solid #f5f5f5;
  padding-bottom:10px;
}
.userinfo-money image{
  width:20px;
  height:20px;
  margin:0px 5px -4px 5px;
}
.user-money{
  border-right:1px solid #f5f5f5;
}
.user-money ,.user-score{
  display: inline-block;
  width: 48%;
  font-size:26rpx;
  color:#666;
  padding-bottom: 10px;
}
.user-money text,.user-score text{
  padding-left:20px;
}
.userinfo-order{
  width:100%;
  background-color:#fff;
  padding-top:20px;
}
.order-title{
  font-size:30rpx;
  padding-left:20px;
  color:#333;
}
.order-icon-list{
  text-align:center;
  padding-top:20px;
  padding-bottom:20px;
}
.order-icon{
  display:inline-block;
  width:33.33%;
  font-size:24rpx;
  color:#666;
  position: relative;
}
.order-icon .red-dot{
width:25px;
height:25px;
position:absolute;
top:0;
right:10%;
background:url(https://cdn.it120.cc/apifactory/2018/03/29/29bc36b05e647ee531b64c1613867491.png) no-repeat center;
background-size:25px 25px;
}
.order-icon image{
  width:50px;
  height:50px;
  display: block;
  margin: 0 auto;
}
.userinfo-list-item{
  width:100%;
  border-top:20px solid #f5f5f5;
}
.userinfo-item{
  width:100%;
  background:url(https://cdn.it120.cc/apifactory/2018/03/02/bccdaf7292464a539efa6a1ea9a11ee6.png) no-repeat 690rpx center;
  background-size:16rpx auto;
  border-bottom:1px solid #fbfbfb;
  line-height:100rpx;
  padding-left:40rpx;
  background-color:#fff;
  font-size:30rpx;
  color:#333;
}
.userinfo-item navigator{
  display:inline-block;
  width: 90%;
}
.userinfo-number{
  text-align:center;
  font-size:24rpx;
  color:#999;
  padding-top:20px;
}