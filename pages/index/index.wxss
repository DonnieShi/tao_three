/**index.wxss**/
page{
  height: 100%;
}
.container {
  background-color: #f5f5f5;
  min-height: 100%;
}
/*-----------swiper----------*/
.swiper-container{
  width: 750rpx;
  position: relative;  
  display: block;
  background-color:#ffffff;
}
.swiper_box {
  width: 100%;
  height:400rpx;
}
swiper-item .slide-image {
  width:96%;
  display:inline-block;
  overflow:hidden;
  height:350rpx;
  box-shadow: 5px 5px 10px #f5f5f5;
  margin:16rpx 0;
  border-radius: 6rpx;
}
swiper-item .SwiperHover{
  height:380rpx;
  margin:0 0;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: -16rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 10rpx;  
  height: 10rpx;  
  background: #666;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .4;
}  
.swiper-container .dots .dot.active{  
  width: 10rpx;  
  opacity: 1;
}
/*-----------sale----------*/
.sale-banners{
  text-align:center;
  width:100%;
  background-color:#ffffff;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.sale-imge{
  width:24%;
  color:#333;
  font-size:26rpx;
  display:inline-block;
}
.sale-imge image{
  width:100rpx;
  height:100rpx;
  display:block;
  margin:0 auto;
}
/*-----------newcoupons----------*/
.newcoupons{
  width: 100%;
  padding-top: 20rpx;
  background-color:#ffffff;
}
.newcoupons image{
  width:90%;
  height:194rpx;
  border-radius: 10rpx;
  margin-left: 40rpx;
}
/*-----------special----------*/
.specials{
  padding-top:20rpx;
  background-color:#ffffff;
  width:100%;
  height:45%;
  padding-bottom: 40rpx;
}
.specials image:nth-child(1){
  width:35%;
  display:inline-block;
  height:490rpx;
  float:left;
  margin-left:40rpx;
  margin-right: 12rpx;
}
.specials image:nth-child(2){
  width:53%;
  display:inline-block;
  height:238rpx;
  float: left;
  padding-bottom:16rpx;
}
.specials image:nth-child(3){
  width:53%;
  display:inline-block;
  height:238rpx;
  float: left;
}
/*-----------store----------*/
.store{
  width:100%;
  background-color:#ffffff;
  border-top:40rpx solid #f5f5f5;
}
.store_name{
  color: #333;
  font-size:32rpx;
  padding-top:20rpx;
  border-bottom:1px solid #f5f5f5;
  padding-bottom:20rpx;
  text-align: center;
}
.store_list{
  padding-top:30rpx;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.store_list_title{
  text-align:left;
  font-size:32rpx;
  color:#333;
  padding-left:40rpx;
}
.store_list_duce{
  text-align:left;
  color:#999;
  width: 70%;
  font-size:26rpx;
  line-height: 60rpx;
  padding-left:40rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.store_list_activ{
  font-size:22rpx;
  text-align:center;
  border:1px solid #ee5952;
  color:#ee5952;
  border-radius:6rpx;
  margin-left:40rpx;
  display:inline-block;
  padding:2rpx 8rpx;
}
.store_list_img{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  position:absolute;
  right:40rpx;
  top:30rpx;
}
.store_list_product{
  width:100%;
  background-color:#fff;
  overflow-x:scroll;
  white-space:nowrap;
}
.store_list_product_img{
  display:inline-block;
  width:200rpx;
  height:200rpx;
  border-radius:6rpx;
  margin-top:20rpx;
  margin-left:20rpx;
  margin-bottom:20rpx;
}
.show-popup{
  position:fixed;
  background-color:rgba(0, 0, 0, 0.5);
  top:0;
  width:100%;
  height:100%;
}
.show-box{
  margin-top: 10%;
}
.show-box .show-coupons{
  width:640rpx;
  height:778rpx;
  margin:0 auto;
  display:block;
}
.show-box .show-close{
  width:70rpx;
  height:70rpx;
  display:block;
  margin:0 auto;
  margin-top:30rpx;
}
.wechat-app{
  background-color:#fff;
  color:#ee5952;
  position:fixed;
  bottom:60rpx;
  right:30rpx;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  text-align:center;
  line-height:80rpx;
  box-shadow:0px 2px 8px #666;
  font-size:30rpx;
}
/*----------show----------*/

.show-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99999999999;
}

.show-container .show-box {
  width: 70%;
  margin: 0 auto;
  height: 600rpx;
  background-color: #fff;
  margin-top: 40%;
  border-radius: 10rpx;
}

.show-logo-box {
  text-align: center;
  width: 80%;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 auto;
  padding-top: 20px;
}

.show-logo-box image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.show-mall-name {
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #333;
}

.show-text-box {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.show-text-name {
  font-size: 30rpx;
  color: #333;
  width: 80%;
  margin: 0 auto;
}

.show-text-info {
  width: 80%;
  margin: 0 auto;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.show-text-info text {
  margin-right: 10rpx;
  font-size: 26rpx;
}

.show-box button::after {
  border-radius: 4rpx;
  border: 0;
}

.show-box button {
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #04be01;
  color: #fff;
}

.newcoupons-hover {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 150rpx;
  height: 150rpx;
  transition: all 0.6s;
}

.modal-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(255, 255, 255, 0.8);
  overflow: hidden;
  z-index: 9999999;
}

.modal-body {
  width: 100%;
  height: 100%;
  text-align: center;
}

.modal-content {
  z-index: 999;
  margin-top: 40%;
}

